@page
@model PokeVerse.Pages.Pokedex.IndexModel
@{
    var imageUrl = "./images/";
    var png = ".png";
}


<form asp-page="/pokedex" method="get">
    <h1>This is the pokedex</h1>

    Here are a list of pokemon currently in your pokedex.
    <br />
    <tbody>

        @foreach (var item in Model.TrainerPokedex.PokedexPokemons)
        {

            var img = @imageUrl + @item.Pokemon.PokeNumber.ToString("D3") + png;

            <img src=@img class="card-img-top" alt="@item.Pokemon.Name" style="width: 500px; height:500px">
            @item.PokemonId
            <br />
            @item.Pokemon.Name
            <br />
            @item.Pokemon.PokeNumber
            @*<partial name="_PokedexPartial" for="@item" />*@
        }
    </tbody>
</form>
