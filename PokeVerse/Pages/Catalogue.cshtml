@page
@model PokeVerse.Pages.CatalogueModel


<body style="background-color: rgb(249,243,202)">
    @* delete this button later *@
    <a class="nav-link text-dark" asp-area="" asp-page="/Pokedex/Index">Quick Link to Pokedex</a>


    <div class="container">
        <div class="row">
            <form method="post">
                <label class="app-product-label" data-title="type">
                    <select asp-for="@Model.PokemonIndex.TypesFilterApplied" asp-items="@Model.PokemonIndex.Types" class="app-product-filter"></select>
                </label>
                <button type="submit" class="app-product-send">
                    <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-funnel" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2h-11z"></path>
                    </svg>
                </button>
            </form>
        </div>

        <div class="app-product-items row">
            @foreach (var item in Model.PokemonIndex.Pokemons)
            {
                item.ImageUrl = "./images/" + item.PokeNumber.ToString("D3") + ".png";

            <form asp-page="/Pokedex/Index" method="post">
                <div class="app-product-item col-lg-3 py-1">
                    <div class="card" style="width: 16rem;">
                        <img src=@item.ImageUrl class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h5 class="card-title" style="text-align: center">@item.PokeNumber</h5>
                            <h6 class="card-subtitle mb-2 text-muted" style="text-align: center">@item.Name</h6>
                            <p class="card-text" style="text-align: center">@item.Type0 @item.Type1</p>
                            @*<a href="#" class="btn btn-block" style="background-color: lightyellow">See Details</a>*@
                            <input class="app-product-addcart-button" type="submit" value="[ Add To Pokedex ]" asp-page="/Pokedex/Index" />
                        </div>
                    </div>
                </div>
                <input type="hidden" asp-for="@item.Id" name="id" />
                <input type="hidden" asp-for="@item.PokeNumber" name="pokeNumber" />
                <input type="hidden" asp-for="@item.Name" name="name" />
                <input type="hidden" asp-for="@item.Type0" name="type0" />
                <input type="hidden" asp-for="@item.Type1" name="type1" />
                <input type="hidden" asp-for="@item.Attack" name="attack" />
                <input type="hidden" asp-for="@item.Defense" name="defense" />
                <input type="hidden" asp-for="@item.Speed" name="speed" />
                <input type="hidden" asp-for="@item.ImageUrl" name="imageUrl" />
            </form>
            }
        </div>
    </div>
</body>